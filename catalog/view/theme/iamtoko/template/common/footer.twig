<footer class="footer">
    <div class="footer__socialwrapp">
        <div>
            <div class="footer__social">
                <a href="{{ instagram }}" class="footer__social__item" data-hover="hover-on-link" rel="nofollow" target="_blank">
                    <svg class="icon icon-instagram" viewBox="0 0 30 30" width="30" height="30">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-instagram"></use>
          </svg>
                </a>
                <a href="{{ facebook }}" class="footer__social__item" data-hover="hover-on-link" rel="nofollow" target="_blank">
                    <svg class="icon icon-faseboock" viewBox="0 0 30 30" width="30" height="30">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-faseboock"></use>
          </svg>
                </a>
            </div>
        </div>
        <div>
            <div class="footer__register">
                {{ text_sale_registration }}{% if logged %}
                <a href="{{ account }}" class="login-name footer__login">{{ LastName }} {{ FirstName }}</a> {% else %}
                <a href="javascript:void(0);" class="login-popup footer__login" data-toggle="modal" data-target="#loginModel">{{ text_footer_registration }}</a> {% endif %}
            </div>
        </div>
    </div>
    <div class="footer__linkswrap">
        <a href="index.php?route=product/category&path=59" class="footer__links">{{ text_all_product }}</a>
        <a href="{{ new }}" class="footer__links">{{ text_new }}</a>
        <a href="{{ sale }}" class="footer__links">{{ text_sale }}</a>
        <a href="{{ blog }}" class="footer__links">{{ text_blog }}</a>
    </div>
    <div class="footer__wrapper">
        {% if informations %}
        <div>
            <span class="footer__title">{{ text_information }}</span>
            <ul class="list-unstyled footer__list">
                {% for information in informations %}
                <li><a href="{{ information.href }}">{{ information.title }}</a></li>
                {% endfor %}
                <li><a href="{{ return }}">{{ text_return }}</a></li>
                <li><a href="{{ sitemap }}">{{ text_sitemap }}</a></li>
            </ul>
        </div>
        {% endif %}
        <div>
            <span class="footer__title">{{ text_account }}</span>
            <ul class="list-unstyled footer__list">
                <li><a href="{{ account }}">{{ text_account }}</a></li>
                <li><a href="{{ order }}">{{ text_order }}</a></li>
                <li><a href="{{ wishlist }}">{{ text_wishlist }}</a></li>
                <li><a href="{{ newsletter }}">{{ text_newsletter }}</a></li>
            </ul>
        </div>
        <div>
            <span class="footer__title">{{ text_service }}</span>
            <ul class="list-unstyled footer__list">
                <li><a href="tel:{{ telephone_href }}" title="Позвонить" data-hover="hover-on-link" rel="nofollow" target="_blank">{{ telephone }}</a></li>
                <li><a href="tel:{{ telephone_href2 }}" title="Позвонить" data-hover="hover-on-link" rel="nofollow" target="_blank">{{ telephone2 }}</a></li>
                <li><a href="mailto:{{ email }}" title="email" data-hover="hover-on-link" rel="nofollow" target="_blank">{{ email }}</a></li>
                <li class="viber-footer">
                    <a href="viber://chat?number={{ viber }}" data-hover="hover-on-link" title="viber" rel="nofollow" target="_blank">
                        <svg class="icon icon-viber" viewBox="0 0 30 30" width="30" height="30">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-viber"></use>
            </svg>
                    </a>
                </li>
                <li class="telegram-footer">
                    <a href="tg://resolve?domain={{ telegram }}" data-hover="hover-on-link" rel="nofollow" title="telegram" target="_blank">
                        <svg class="icon icon-telegram" viewBox="0 0 30 30" width="30" height="30">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-telegram"></use>
            </svg>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="footer__reserv">© 2021 <span>i am TOKO</span></div>

    <!-- Кнопка перезвоним -->

    <a href="#modalCallbackFooterFooter" class="btn btn-link footer__btn_coll hidden-xs" id="button_callbackfooter" data-toggle="modal">{{ text_button_call_side }}<i class="fa fa-phone"></i></a>
    <a href="#modalCallbackFooterFooter" class="btn btn-link footer__btn_coll hidden-md hidden-sm hidden-lg" id="button_callbackfooter" data-toggle="modal"><i class="fa fa-phone"></i></a>

    <!-- Кнопка salepopup -->

    <a href="#salepopup" class="footer__btn_coll footer__btn_sale button-sale-popup">
        <svg class="icon icon-logo" viewBox="0 0 30 30" width="30" height="30">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="image\sprite.svg#icon-present"></use>
        </svg>
    </a>

    <div class="relative">
        <div class="scrollup">
            <!-- Иконка fa-chevron-up (Font Awesome) -->
            <i class="fa fa-chevron-up"></i>
        </div>
    </div>
    </div>


</footer>

<!--Скидка попап-->
<div class="hidden popup">
    <div id="salepopup" class="sale-popup popup__sale">
        <img class="popup__sale_img" src="image/catalog/banners/skidka-zaregistrirovannym-pokupatelyam-iamtoko.png" alt="Скидка 10% зарегистрированным покупателям">
        <div class="left-salepopup popup__sale_left">{{ text_left_sale }}</div>
        <div class="bottom-salepopup popup__sale_bottom">{{ text_bottom_sale }}</div>
        <div class="button-salepopup popup__sale_btn banner-button"><a href="javascript:void(0);" class="login-popup" data-toggle="modal" data-target="#loginModel">{{ text_footer_registration }}</a></div>
    </div>
</div>

